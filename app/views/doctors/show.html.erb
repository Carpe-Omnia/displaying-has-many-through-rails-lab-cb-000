<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Department:</strong>
  <%= @doctor.department %>
</p>
<ul>
<% @doctor.appointments.each do |appt| %>
  <li>
  <%= link_to appt.patient.name, patient_path(appt.patient)%> at <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %>
  </li>
<% end %>
</ul>
<%= link_to 'Edit', edit_doctor_path(@doctor) %> |
<%= link_to 'Back', doctors_path %>
